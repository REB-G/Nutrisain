				{% for diet in diets %}
					<option value="{{ diet.id }}">{{ diet.name }}</option>
				{% endfor %}
			</select>
		</form> #}
	</section>
	<section id='filtered_recipes'>
		{% include 'recipes/_recipes.html.twig'%}
	</section>
{% endblock %}
