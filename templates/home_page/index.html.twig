{% extends 'base.html.twig' %}

{% block title %}Nutrisain - Accueil{% endblock %}

{% block body %}
    {% for message in app.flashes('message') %}
        <p id='js_registration_done' class='app-flash-message'>{{message}}</p>
    {% endfor %}

    {% for page in home_pages %}
        <section class="main flux">
            <h1 class="main__title">{{page.title}}</h1>
            <p class="main__text-presentation">{{page.welcomeText}}</p>
        </section>

        <section class="description flux">
            <h2 class="description__title">{{page.aboutTitle}}</h2>
            <p class="description__text-presentation">{{page.aboutText}}</p>
        </section>

        <section class="services flux">
            <h2 class="services__title">{{page.servicesTitle}}</h2>
            <p class="services__text-presentation">{{page.servicesText}}</p>
        </section>

        <section class="home-page-links flex-center">
            <a href="{{ path('app_recipes_index')}}"  class="home-page-links__recipes">Voir les recettes</a>
            <a href="{{ path('app_contact_index')}}"  class="home-page-links__contact">Nous contacter</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_home_page_edit', {'id': page.id}) }}" class="home-page-links__modifier">Modifier les informations de pr√©sentation</a>
            {% endif %}
        </section>
    {% endfor %}
{% endblock %}
