{% extends 'base.html.twig' %}

{% block title %}Nutrisain - Inscription patient{% endblock %}

{% block body %}
    <main class='form-flux register-form flex-center'>
        <h1 class='register-form__title'>Ajout d'un nouveau patient</h1>

        <section class="register-form__flux">
            {{ form_start(registrationForm, {'attr': {'class': 'register-form__form'}}) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.allergy) }}
                {{ form_row(registrationForm.diet) }}
                <div class='flex-center register-form__button'>
                    <button type="submit" class="btn btn__linear-gradient">Cr√©er le patient</button>
                </div>
            {{ form_end(registrationForm) }}
        </section>
    </main>
{% endblock %}
